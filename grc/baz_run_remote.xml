<?xml version="1.0"?>
<block>
	<name>Run Remote</name>
	<!-- Must begin with 'variable' -->
	<key>variable_run_remote</key>
	<!--<category>Misc</category>-->
	<import>exec("try:\n\timport sys; import run_remote;\n\tif run_remote.run_remote('$remote_host()', ['gnuradio-companion'], $screen, $x_forwarding, '$shell()') == True: sys.exit(0)\nexcept Exception, e: pass")</import>
	<!-- Must have 'value' variable -->
	<var_make>self.$(id) = $(id) = $value</var_make>
	<make></make>
	
	<!--<callback></callback>-->
	
	<param>
		<name>Default</name>
		<key>value</key>
		<value>None</value>
		<type>raw</type>
		<hide>all</hide>
	</param>
	
	<param>
		<name>Remote Host</name>
		<key>remote_host</key>
		<value></value>
		<type>string</type>
	</param>

	<param>
		<name>Shell</name>
		<key>shell</key>
		<value>bash</value>
		<type>string</type>
	</param>

	<param>
		<name>Screen</name>
		<key>screen</key>
		<value>False</value>
		<type>bool</type>
		<!--<hide>#if str($block) == 'True' then 'part' else 'none'#</hide>-->
		<option>
			<name>Yes</name>
			<key>True</key>
		</option>
		<option>
			<name>No</name>
			<key>False</key>
		</option>
	</param>

	<param>
		<name>X Forwarding</name>
		<key>x_forwarding</key>
		<value>True</value>
		<type>bool</type>
		<!--<hide>#if str($block) == 'True' then 'part' else 'none'#</hide>-->
		<option>
			<name>Yes</name>
			<key>True</key>
		</option>
		<option>
			<name>No</name>
			<key>False</key>
		</option>
	</param>

	<!--<param>
		<name>SSH Options</name>
		<key>ssh_options</key>
		<value>["-X"]</value>
		<type>raw</type>
	</param>-->
	
<!-- Must come before sink/source -->
	<!--<check></check>-->
	
	<doc>X Forwarding should be on so that remote process is killed when closing local terminal.</doc>
</block>
