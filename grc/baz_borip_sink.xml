<?xml version="1.0"?>
<!--
###################################################
##BorIP Sink
###################################################
 -->
<block>
	<name>BorIP Sink</name>
	<key>borip_sink</key>
	<!--<category>Sinks</category>-->
	<import>from baz import borip_server</import>
	
	<!-- *$vlen, $ipaddr, $port, $psize, $eof, $borip -->
	<make>borip_server.server(size=($type.size*$type.vlen), mul=$mul, server=True, parent=self, verbose=$verbose, debug=$debug, show_commands=$show_commands)
#if $status_in()
self.$(id).set_status_msgq($(id)_msgq_in)
#end if
</make>
	<!--<callback>set_mtu($mtu)</callback>-->
	<param>
		<name>Input Type</name>
		<key>type</key>
		<type>enum</type>
		<option>
			<name>Complex</name>
			<key>complex</key>
			<opt>type:complex</opt>
			<opt>size:gr.sizeof_gr_complex</opt>
			<opt>vlen:1</opt>
		</option>
		<!--<option>
			<name>Float</name>
			<key>float</key>
			<opt>size:gr.sizeof_float</opt>
		</option>
		<option>
			<name>Int</name>
			<key>int</key>
			<opt>size:gr.sizeof_int</opt>
		</option>-->
		<option>
			<name>Short (complex)</name>
			<key>complex_short</key>
			<opt>type:short</opt>
			<opt>size:gr.sizeof_short</opt>
			<opt>vlen:2</opt>
		</option>
		<option>
			<name>Interleaved Short</name>
			<key>short</key>
			<opt>type:short</opt>
			<opt>size:gr.sizeof_short</opt>
			<opt>vlen:1</opt>
		</option>
		<!--<option>
			<name>Byte</name>
			<key>byte</key>
			<opt>size:gr.sizeof_char</opt>
		</option>-->
	</param>
	<param>
		<name>Constant multiplier</name>
		<key>mul</key>
		<value>1.0</value>
		<type>real</type>
		<hide>#if $mul() == 1.0 then 'part' else 'none'#</hide>
	</param>
	<!--<param>
		<name>Destination IP Address</name>
		<key>ipaddr</key>
		<type>string</type>
	</param>
	<param>
		<name>Destination Port</name>
		<key>port</key>
		<type>int</type>
	</param>
	<param>
		<name>Payload Size</name>
		<key>psize</key>
		<value>1472</value>
		<type>int</type>
	</param>
	<param>
		<name>Send Null Pkt as EOF</name>
		<key>eof</key>
		<value>True</value>
		<type>bool</type>
		<hide>#if str($eof) == 'True' then 'part' else 'none'#</hide>
		<option>
			<name>On</name>
			<key>True</key>
		</option>
		<option>
			<name>Off</name>
			<key>False</key>
		</option>
	</param>
	<param>
	    <name>BorIP</name>
		<key>borip</key>
		<value>False</value>
		<type>bool</type>
		<hide>#if str($borip) == 'False' then 'part' else 'none'#</hide>
		<option>
			<name>On</name>
			<key>True</key>
		</option>
		<option>
			<name>Off</name>
			<key>False</key>
		</option>
	</param>-->
	<param>
	    <name>Verbose</name>
		<key>verbose</key>
		<value>False</value>
		<type>bool</type>
		<hide>#if str($verbose) == 'False' then 'part' else 'none'#</hide>
		<option>
			<name>On</name>
			<key>True</key>
		</option>
		<option>
			<name>Off</name>
			<key>False</key>
		</option>
	</param>

	<param>
	    <name>Debug Output</name>
		<key>debug</key>
		<value>False</value>
		<type>bool</type>
		<hide>#if str($debug) == 'False' then 'part' else 'none'#</hide>
		<option>
			<name>On</name>
			<key>True</key>
		</option>
		<option>
			<name>Off</name>
			<key>False</key>
		</option>
	</param>

	<param>
	    <name>Show Commands</name>
		<key>show_commands</key>
		<value>False</value>
		<type>bool</type>
		<hide>#if str($show_commands) == 'False' then 'part' else 'none'#</hide>
		<option>
			<name>On</name>
			<key>True</key>
		</option>
		<option>
			<name>Off</name>
			<key>False</key>
		</option>
	</param>

	<param>
	    <name>Accept status</name>
	    <key>status_in</key>
	    <value>False</value>
	    <type>bool</type>
	    <hide>#if str($status_in) == 'False' then 'part' else 'none'#</hide>
	    <option>
		    <name>Yes</name>
		    <key>True</key>
	    </option>
	    <option>
		    <name>No</name>
		    <key>False</key>
	    </option>
    </param>
	<!--<param>
		<name>Vec Length</name>
		<key>vlen</key>
		<value>1</value>
		<type>int</type>
	</param>
	
	<check>$vlen &gt; 0</check>-->
	
	<sink>
		<name>in</name>
		<type>$type.type</type>
		<vlen>$type.vlen</vlen>
	</sink>
	<sink>
		<name>status</name>
		<type>msg</type>
		<optional>1</optional>
	</sink>

</block>
