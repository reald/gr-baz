<?xml version="1.0"?>
<block>
	<name>OP25 Decoder (Combined)</name>
	<key>op25_decoder</key>
	<!--<category>Modulators</category>-->
	<import>from baz import baz_op25</import>
	<make>baz_op25.op25_decoder(channel_rate=$channel_rate, idle_silence=$idle_silence, output_dibits=$dibits_out, key=$key, key_map=$key_map, verbose=$verbose, #slurp
#if str($msg_out) == 'auto_tune'
auto_tune_msgq=$(id)_msgq_out,#slurp
#elif str($msg_out) == 'traffic'
traffic_msgq=$(id)_msgq_out,#slurp
#end if
)</make>
	
	<callback>set_key($key)</callback>
	<callback>set_key_map($key_map)</callback>
	<callback>set_idle_silence($idle_silence)</callback>
	<callback>set_logging($verbose)</callback>
	
	<param>
		<name>Channel Rate</name>
		<key>channel_rate</key>
		<type>real</type>
	</param>

	<param>
		<name>Key (hex)</name>
		<key>key</key>
		<type>string</type>
		<hide>#if len($key()) == 0 then 'part' else 'none'#</hide>
	</param>
	
	<param>
		<name>Key map (hex)</name>
		<key>key_map</key>
		<value>{}</value>
		<type>raw</type>
		<hide>#if len($key_map()) == 0 then 'part' else 'none'#</hide>
	</param>
	
	<param>
		<name>Idle silence</name>
		<key>idle_silence</key>
		<value>True</value>
		<type>bool</type>
		<hide>part</hide>
		<option>
			<name>Yes</name>
			<key>True</key>
		</option>
		<option>
			<name>No</name>
			<key>False</key>
		</option>
	</param>
	
	<param>
		<name>Console logging</name>
		<key>verbose</key>
		<value>False</value>
		<type>bool</type>
		<hide>part</hide>
		<option>
			<name>Yes</name>
			<key>True</key>
		</option>
		<option>
			<name>No</name>
			<key>False</key>
		</option>
	</param>
	
	<param>
		<name>Output dibits</name>
		<key>dibits_out</key>
		<value>False</value>
		<type>bool</type>
		<hide>part</hide>
		<option>
			<name>Yes</name>
			<key>True</key>
		</option>
		<option>
			<name>No</name>
			<key>False</key>
		</option>
	</param>
	
	<param>
		<name>Output message</name>
		<key>msg_out</key>
		<value>none</value>
		<type>enum</type>
		<hide>part</hide>
		<option>
			<name>None</name>
			<key>none</key>
		</option>
		<option>
			<name>Auto-tune</name>
			<key>auto_tune</key>
		</option>
		<option>
			<name>Traffic</name>
			<key>traffic</key>
		</option>
	</param>
	
	<!--<check>not $win_size or len($win_size) == 2</check>-->
	
	<sink>
		<name>bb</name>
		<type>float</type>
	</sink>
	
	<source>
		<name>audio</name>
		<type>float</type>
	</source>
	
	<source>
		<name>dibits</name>
		<type>float</type>
		<optional>1</optional>
	</source>
	
	<source>
		<name>msg</name>
		<type>msg</type>
		<optional>1</optional>
	</source>
	
	<doc>OP25 Decoder

Input real floating-point baseband data.
Outputs decoded audio at 8000 Hz, 16-bit.
	</doc>
</block>
