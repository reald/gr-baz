<?xml version="1.0"?>
<block>
	<name>OP25 Decoder (Simple)</name>
	<key>op25_decoder_simple</key>
	<!--<category>Audio</category>-->
	<import>from baz import baz_op25</import>
	<make>baz_op25.op25_decoder_simple(key=$key,key_map=$key_map,idle_silence=$idle_silence,verbose=$verbose,#slurp
#if $traffic_out()
traffic_msgq=$(id)_msgq_out,#slurp
#end if
)</make>
	
	<callback>set_key($key)</callback>
	<callback>set_key_map($key_map)</callback>
	<callback>set_idle_silence($idle_silence)</callback>
	<callback>set_logging($verbose)</callback>

	<param>
		<name>Key (hex)</name>
		<key>key</key>
		<type>string</type>
		<hide>#if len($key()) == 0 then 'part' else 'none'#</hide>
	</param>

	<param>
		<name>Key map (hex)</name>
		<key>key_map</key>
		<value>{}</value>
		<type>raw</type>
		<hide>#if len($key_map()) == 0 then 'part' else 'none'#</hide>
	</param>
	
	<param>
		<name>Idle silence</name>
		<key>idle_silence</key>
		<value>True</value>
		<type>bool</type>
		<hide>part</hide>
		<option>
			<name>Yes</name>
			<key>True</key>
		</option>
		<option>
			<name>No</name>
			<key>False</key>
		</option>
	</param>
	
	<param>
		<name>Console logging</name>
		<key>verbose</key>
		<value>False</value>
		<type>bool</type>
		<hide>part</hide>
		<option>
			<name>Yes</name>
			<key>True</key>
		</option>
		<option>
			<name>No</name>
			<key>False</key>
		</option>
	</param>
	
	<param>
		<name>Output traffic</name>
		<key>traffic_out</key>
		<value>False</value>
		<type>bool</type>
		<hide>part</hide>
		<option>
			<name>Yes</name>
			<key>True</key>
		</option>
		<option>
			<name>No</name>
			<key>False</key>
		</option>
	</param>
	
	<!--<check>not $win_size or len($win_size) == 2</check>-->
	
	<sink>
		<name>dibits</name>
		<type>float</type>
	</sink>
	
	<source>
		<name>audio</name>
		<type>float</type>
	</source>
	
	<source>
		<name>traffic</name>
		<type>msg</type>
		<optional>1</optional>
	</source>
	
	<doc>OP25 Decoder

Input synchronised dibits.
Outputs decoded audio at 8000 Hz, 16-bit.
	</doc>
</block>
